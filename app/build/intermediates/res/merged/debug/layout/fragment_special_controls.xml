<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7EBEE"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_background"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参数设置"
                android:textSize="30px"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/white_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_background">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="参数设置"
                    android:textSize="30px"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="使能项目"
                    android:textSize="30px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="总缸气压低压"
                    android:textSize="20px"/>
                <TextView
                    android:id="@+id/setting1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textColor="#01ace4"
                    android:text="0.00"
                    android:textSize="24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mpa"
                    android:textSize="20px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:gravity="center"
                    android:text="总缸气压低压"
                    android:textSize="20px"/>
                <Button
                    android:id="@+id/setting_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:gravity="center"
                    android:text="使能关"
                    android:textColor="#ffffff"
                    android:textSize="24px"
                    android:background="@drawable/btn_bbbtttnnn"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="制动缸风压低压"
                    android:textSize="20px"/>
                <TextView
                    android:id="@+id/setting2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#01ace4"
                    android:text="0.00"
                    android:textSize="24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mpa"
                    android:textSize="20px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:gravity="center"
                    android:text="制动缸风压低压"
                    android:textSize="20px"/>
                <Button
                    android:id="@+id/setting_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="使能关"
                    android:textColor="#ffffff"
                    android:textSize="24px"
                    android:background="@drawable/btn_bbbtttnnn"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="变频器过温"
                    android:textSize="20px"/>
                <TextView
                    android:id="@+id/setting3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#01ace4"
                    android:text="0.00"
                    android:textSize="24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="°C"
                    android:textSize="20px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="136dp"
                    android:gravity="center"
                    android:text="变频器过温"
                    android:textSize="20px"/>
                <Button
                    android:id="@+id/setting_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="76dp"
                    android:gravity="center"
                    android:text="使能关"
                    android:textColor="#ffffff"
                    android:textSize="24px"
                    android:background="@drawable/btn_bbbtttnnn"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="482dp"
                    android:gravity="center"
                    android:text="安全门"
                    android:textSize="20px"/>
                <Button
                    android:id="@+id/setting_btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="126dp"
                    android:gravity="center"
                    android:text="使能关"
                    android:textColor="#ffffff"
                    android:textSize="24px"
                    android:background="@drawable/btn_bbbtttnnn"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>