<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00c2eb"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/tairui_logo"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间设置"
                android:textColor="#ffffff"
                android:textSize="36px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18px"
            android:layout_marginRight="18px"
            android:orientation="vertical">
            <Button
                android:id="@+id/para_btn_original"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:textSize="22px"
                android:textColor="#ffffff"
                android:text="恢复原始参数"/>
            <Button
                android:id="@+id/para_btn_setting"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:layout_marginTop="14px"
                android:textSize="22px"
                android:textColor="#ffffff"
                android:text="设定出厂参数"/>
            <Button android:id="@+id/para_btn_factory"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:layout_marginTop="14px"
                android:textSize="22px"
                android:textColor="#ffffff"
                android:text="恢复出厂参数"/>
        </LinearLayout>
    </RelativeLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20px">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="空压机开机延时"
           android:layout_marginLeft="180px"
           android:textColor="#ffffff"
           android:textSize="24px" />
       <TextView
           android:id="@+id/para_et_opendelay"
           android:layout_width="198px"
           android:layout_height="48px"
           android:background="@mipmap/momitor_tv_background"
           android:layout_marginLeft="20px"
           android:text="90.0"
           android:gravity="center"
           android:clickable="true"
           android:textColor="#ffffff"
           android:textSize="24px"
           android:lines="1"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10px"
           android:text="秒"
           android:textColor="#ffffff"
           android:textSize="24px" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待机启动延时"
            android:layout_marginLeft="180px"
            android:textColor="#ffffff"
            android:textSize="24px" />
        <TextView
            android:id="@+id/para_et_startdelay"
            android:layout_width="198px"
            android:layout_height="48px"
            android:background="@mipmap/momitor_tv_background"
            android:layout_marginLeft="44px"
            android:text="90.0"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="24px"
            android:lines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="秒"
            android:textColor="#ffffff"
            android:textSize="24px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A机运行时间"
          android:layout_marginLeft="180px"
            android:textColor="#ffffff"
            android:textSize="24px" />
        <TextView
            android:id="@+id/momitor_tv_runningtime"
            android:layout_width="198px"
            android:layout_height="48px"
            android:background="@mipmap/momitor_tv_flow_background"
            android:layout_marginLeft="54px"
            android:text="9000000000.0000"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="24px"
            android:lines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="小时"
            android:textColor="#ffffff"
            android:textSize="24px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right">
        <Button
            android:id="@+id/para_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4px"
            android:layout_marginRight="20px"
            android:background="@mipmap/btn_back"/>
    </LinearLayout>


</LinearLayout>