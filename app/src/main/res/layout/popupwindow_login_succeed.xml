<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pp_parent_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="128px"
        android:layout_marginLeft="197px"
        android:layout_marginRight="197px"

        android:layout_marginTop="172px"
        android:background="@drawable/pp_login"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:src="@drawable/pp_login_icon_smile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36px"
            android:text="@string/PP_login_succeed"
            android:textColor="#888C95"
            android:textSize="30px" />

        <Button
            android:id="@+id/pp_btn_succeed_go_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="42dp"
            android:background="@drawable/pp_succeed_selector"
            android:text="@string/PP_login_go_home"
            android:textSize="24px"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</LinearLayout>