<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10px"
        android:background="@drawable/oxygen_state_background"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/solenoid_valve_red_arrows" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/solenoid_valve_bg"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/avalve_btn_valve_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="4dp"
                android:layout_marginTop="40dp"

                android:background="@drawable/oxy_selecor"
                android:button="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/avalve_btn_valve1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:background="@drawable/oxy_selecor"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/avalve_btn_valve2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/oxy_selecor"
                    android:button="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/avalve_btn_valve3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:background="@drawable/oxy_selecor"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/avalve_btn_valve4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/oxy_selecor"
                    android:button="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/avalve_btn_valve5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:background="@drawable/oxy_selecor"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/avalve_btn_valve6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/oxy_selecor"
                    android:button="@null" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/avalve_btn_valve_born"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="3dp"
                android:background="@drawable/oxy_selecor"
                android:button="@null" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>