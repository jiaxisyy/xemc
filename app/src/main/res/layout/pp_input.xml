<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pp_parent_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="128px"
        android:layout_marginLeft="197px"
        android:layout_marginRight="197px"
        android:layout_marginTop="172px"
        android:background="@drawable/pp_login"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="               您在这里\n可以输入您所需设置的数值"
                android:textColor="#9FA1B0"
                android:textSize="26px" />

            <TextView
                android:id="@+id/pup_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10px"
                android:background="@drawable/pp_btn_login_cancel" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33px"
            android:layout_marginRight="33px"
            android:layout_marginTop="30px"
            android:background="@drawable/pp_input_bg"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/pup_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:background="@null"
                android:hint="请输入数值"
                android:inputType="phone"
                android:singleLine="true"
                android:textSize="18px"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="33px"
            android:layout_marginRight="33px"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/pup_comfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/pp_affirm_selector"
                android:text="@string/pp_login_affirm"
                android:textColor="#FFFFFF"
                android:textSize="18px"

                />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>


